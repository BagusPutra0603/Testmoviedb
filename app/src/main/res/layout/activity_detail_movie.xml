<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DetailMovieActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">

        <ImageView
            android:id="@+id/postermovie"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:id="@+id/titlemovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/whitePrimary"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/datemoview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/whitePrimary"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/ratingmovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/whitePrimary"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/orlanguangemovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/whitePrimary"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/overviewmovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/reviewmovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/trailermovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        />
</LinearLayout>